{{#each ideas}}
  <div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <a href="/ideas/edit/{{_id}}" class="btn btn-dark btn-block" >
       Edit
    </a>
    <form method="post" action="/ideas/{{_id}}?_method=DELETE">
       <input type="hidden" name="_method" value="DELETE">
       <input type="submit" class="btn w-100 btn-danger mt-1" value="Delete"/>
    </form>
  </div>
{{else}}
  <p>No video ideas listed</p>
{{/each}}